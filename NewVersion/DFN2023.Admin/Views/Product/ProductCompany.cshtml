                <div class="form-group">
                    <label>
                        Temel Ürün
                        <span class="text-danger">*</span>
                    </label>
                    <select id="p_ProductBaseId" class="form-control" >
                        <option value="0">Ana Ürün Seçiniz..</option>

                        @for (int i = 0; i < Model.ProductBase.Count; i++)
                        {
                            <option value="@Model.ProductBase[i].Id">@Model.ProductBase[i].Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label>
                        Şirket
                        <span class="text-danger">*</span>
                    </label>
                    <select id="p_CategoryId" class="form-control">
                        <option value="0">Kategori Seçiniz..</option>

                        @for (int i = 0; i < Model.Category.Count; i++)
                        {
                            <option value="@Model.Category[i].Id">@Model.Category[i].Name</option>
                        }
                    </select>
                </div>

                <div class="form-group">
                    <label>
                        Kod
                        <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="p_Code">
                </div>

                <div class="form-group">
                    <label>
