                    </label>
                    <select id="p_CompanyId" class="form-control" >
                        <option value="0">Şirket Seçiniz..</option>

                        @for (int i = 0; i < Model.Company.Count; i++)
                        {
                            <option value="@Model.Company[i].Id">@Model.Company[i].OfficialName</option>
                        }
                    </select>
                </div>

                @*<div class="form-group">
