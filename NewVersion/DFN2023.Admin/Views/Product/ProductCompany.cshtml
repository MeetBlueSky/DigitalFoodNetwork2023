            </div>
            <div class="modal-body">


                <div class="form-group">
                    <label>
                        Adı
                        <span class="text-danger">*</span>
                    </label>
                    <input type="text"  class="form-control"  id="p_Name"> 
                </div>

                @*<div class="form-group">
                    <label>
