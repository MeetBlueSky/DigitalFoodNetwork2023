@{
    ViewData["Title"] = "Ülkeler";
}

<!--begin::Container-->
<div class="container">
    <div class="card card-custom">
        <div class="card-header">
            <div class="card-title">
                <span class="card-icon">
                     
                </span>
                <h3 class="card-label"> </h3>
            </div>
            <div class="card-toolbar">
            
                <!--begin::Button-->
                <a href="#" onclick="yeniKayit()" class="btn btn-primary font-weight-bolder">
                    <span class="svg-icon svg-icon-md">
                        <!--begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg-->
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                            <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                                <rect x="0" y="0" width="24" height="24" />
                                <circle fill="#000000" cx="9" cy="15" r="6" />
                                <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                            </g>
                        </svg>
                        <!--end::Svg Icon-->
                    </span>Yeni Kayıt
                </a>
                <!--end::Button-->
            </div>
        </div>
        <div class="card-body">
            <!--begin: Datatable-->
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-checkable" id="kt_datatable" style="margin-top: 13px !important">
                    <thead>
                        <tr>
                            <th>Ayarlar</th>
                            <th>ID</th>
                            <th>Şehir</th>
                            <th>Ülke</th>
                            <th>Dil</th>
                            <th>Durum</th>
                            <th>Sıralama</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <!--end: Datatable-->
        </div>
    </div>
    <!--end::Card-->
</div>

<div class="modal fade" id="exampleModalSizeLg" tabindex="-1" role="dialog" aria-labelledby="exampleModalSizeLg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal Title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">

               <label  class="control-label"> Ülke Seçiniz</label>
               @Html.DropDownList("Country", null, "....",  new { @class = "form-control" })

                  
                 <div class="form-group">
                    <label>
                        Adı
                    </label>
                    <input type="text" class="form-control" placeholder="...." id="Name" >
                     <input type="hidden" id="Id" class="form-control">
                </div>     
                 <div class="form-group">
                     <label>
                         Pasif/Aktif
                     </label>
                            <span class="switch">
                                <label>
                                    <input type="checkbox" name="Status" id="status">
                                    <span></span>
                                </label>
                            </span>
                        </div>        
                        <br />

                <div class="form-group">
                    <label>
                        Sıralama
                    </label>
                    <input type="number" class="form-control" placeholder="...." id="RowNum" >
                </div>

               <br />
            </div>
            <div class="modal-footer"> 
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Kapat</button>
                <button type="button" onclick=" sehirEkleGuncelle()" class="btn btn-success font-weight-bold">Kaydet</button>
            </div>
        </div>
    </div>
</div>


<!--end::Container-->
@section Scripts{
    
   
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js"></script>
    <script>var hst = "@Url.Action("getSehir", "Sehirler")"; var hst2 = "@Url.Action("addSehir", "Sehirler")";
     var hst3 = "@Url.Action("updateSehir", "Sehirler")";  var hst4 = "@Url.Action("deleteSehir", "Sehirler")";
    </script>
    <script src="~/assets/custom/sehirler.js"></script>
}