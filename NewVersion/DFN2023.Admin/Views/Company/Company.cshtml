                </a>
                <!--end::Button-->
            </div>
        </div>
        <div class="card-body">
            <!--begin: Datatable-->
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-checkable" id="kt_datatable" style="margin-top: 13px !important">
                    <thead>
                        <tr>
                            <th>Ayarlar</th>
                            <th>ID</th>
                            <th>Adı</th>
                            <th>Açıklama</th>
                            <th>Uzun açıkl.</th>
                            <th>Durum</th>
                            @*<th>Dil</th>*@
                        </tr>
                    </thead>
                </table>
            </div>
            <!--end: Datatable-->
        </div>
    </div>
    <!--end::Card-->
</div>


<div class="modal fade" id="exampleModalSizeLg" tabindex="-1" role="dialog" aria-labelledby="exampleModalSizeLg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Kategori Ekle/Düzenle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            <div class="modal-body">


                <div class="form-group">
                    <label>
                        Adı
                        <span class="text-danger">*</span>
                    </label>
                    <input type="text" class="form-control" id="p_Name">
                </div>


                <div class="form-group">
                    <label>
                        Pasif/Aktif
                    </label>

                    <span class="switch">
                        <label>
                            <input type="checkbox" name="select" id="p_durum">
                            <span></span>
                        </label>
                    </span>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Kapat</button>
                <button type="button" onclick=" seriKaydet()" class="btn btn-success font-weight-bold">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@*----------------------------------------------------Resim  Modal----------------------------------------------------*@
<div class="modal fade" id="boatImageModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalSizeLg" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-xl" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="">Şirket Görselleri</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <i aria-hidden="true" class="ki ki-close"></i>
                </button>
            </div>
            
            <div class="modal-header" style="display: flow-root !important;">
                <button type="button" onclick=" resimEkleModalOpen() " class="btn btn-success font-weight-bold">Şirkete Görsel Ekle</button>
                


            </div>

            <div class="modal-body">


                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-checkable" id="kt_datatableImage" style="margin-top: 13px !important">
                        <thead>
                            <tr>
                                <th>Sıralama</th>
                                <th>Ayarlar</th>
                                <th>ID</th>
                                <th>Ürün</th>
                                @*<th>Görsel Tipi</th>*@
                                <th>Resim</th>
                                <th>Açıklama</th>
                                <th>Aktif/Pasif</th>
                                @*<th>Sıralama</th>*@
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light-primary font-weight-bold" data-dismiss="modal">Kapat</button>
            </div>
        </div>
    </div>
</div>



