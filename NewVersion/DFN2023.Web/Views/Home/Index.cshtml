@using DFN2023.Web.Helpers;
@{
    ViewData["Title"] = "Anasayfa";
}


	<section class="hero-section gap" style="background-image: url(assets/img/background-1.png);">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-6" data-aos="fade-up"  data-aos-delay="200" data-aos-duration="300">
					<div class="restaurant">
						@if (Model.stanasayfasec1.Id > 0)
					{
						
						<h1>@Model.stanasayfasec1.Title</h1>
						<p>@Model.stanasayfasec1.Summary</p>
					}
						<form class="blog-form">
									<div class="restaurant">
										<div class="nice-select-one">
											<select id="kategoriid" class="nice-select Advice">
											  <option value="0">Kategori Seçiniz</option>
											  @for (var i = 0; i < Model.kategoriler.Count; i++)
											  {
											  <option value="@Model.kategoriler[i].Id">@Model.kategoriler[i].Name</option>
											  }
										</select>
										</div>
									</div>
									<div class="restaurant">
										<div class="name-form">
											<i class="fa fa-th-list"></i>
								<input type="text" name="urunadi" id="urunadi" placeholder="Ürün/Tedarikçi Adı" />
										</div>
									</div>	
									
								</form>
							 <button onclick=filter() class="button-price mt-3">Bul</button>	

					</div>
				</div>
				<div class="col-lg-6" data-aos="fade-up"  data-aos-delay="300" data-aos-duration="400">
					<div class="img-restaurant">
							@if (Model.stanasayfasec1.Id > 0)
					{
						<img alt="img" src="~/assets/img/stcontent/@Model.stanasayfasec1.Image1">
					}
					
						
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- your-favorite-food hakkında -->
	<section class="your-favorite-food gap" style="background-image: url(assets/img/background-1.png);">
		<div class="container">
			<div class="row align-items-center">
				<div class="col-lg-5" data-aos="fade-up"  data-aos-delay="200" data-aos-duration="300">
					<div class="food-photo-section">
						
					@if (Model.stanasayfasec2.Id > 0)
					{
						<img alt="img" src="~/assets/img/stcontent/@Model.stanasayfasec2.Image1">
					}
				</div>
				</div>
				<div class="col-lg-6 offset-lg-1" data-aos="fade-up" data-aos-delay="300" data-aos-duration="400">
					<div class="food-content-section">
						@if(Model.stanasayfasec2.Id>0){
						<h2>@Model.stanasayfasec2.Title</h2>
								<p>@Model.stanasayfasec2.Summary</p>
								<a href="#" class="button button-2">Order Now</a>
						}
					</div>
				</div>
			</div>
		</div>
	</section>

	@if(Model.user==null){
	<!-- works-section tuketiciler - tedarikciler -->
		<section class="works-section gap no-top">
			<div class="container">
			
				<div class="row ">
					<div class="col-lg-6 col-md-6 col-sm-12" data-aos="flip-up"  data-aos-delay="200" data-aos-duration="300">
						<div class="work-card">
							@if(Model.stanasayfatuk.Id>0){
								@Html.Raw(@Model.stanasayfatuk.Html)
							}
							<a onclick="kayitOl(3)" class="button button-2" style="margin-top: 10px;">Üyelik</a>
						</div>
					</div>
					<div class="col-lg-6 col-md-6 col-sm-12" data-aos="flip-up"  data-aos-delay="300" data-aos-duration="400">
						<div class="work-card">
							@if(Model.stanasayfated.Id>0){
								@Html.Raw(@Model.stanasayfated.Html)
							}
							<a onclick="kayitOl(2)" class="button button-2" style="margin-top: 10px;">Başvur</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	
	}
	




	<!-- best-restaurants son-eklenenler -->
	<section class="best-restaurants gap" style="background:#fcfcfc">
		<div class="hading" data-aos="fade-up"  data-aos-delay="200" data-aos-duration="300">
							<h2>Son Eklenen Tedarikçiler</h2>
			</div>
		<div class="container">
			<div class="row align-items-center">
				@if(Model.sirketler!=null){
				@for (var i = 0; i < Model.sirketler.Count; i++)
				{
						<div class="col-lg-6" data-aos="flip-up"  data-aos-delay="400" data-aos-duration="500">
					<div class="logos-card two">
						<img alt="logo" width="50px" src="~/assets/logo/@Model.sirketler[i].Logo">
							<div class="cafa">
								<h4><a href="@Url.Action("Detay","Firma")/@UrlCleaner.GetSanitizedTextForURL(Model.sirketler[i].OfficialName)/@Model.sirketler[i].Id">@Model.sirketler[i].OfficialName</a></h4>
								
								<p>@Model.sirketler[i].ShortDescription</p>
							</div>
					</div>
				</div>
				}
			}
			
			</div>
			<div class="button-gap">
				<a  class="button button-2 non">See All<i class="fa-solid fa-arrow-right"></i></a>
			</div>
		</div>
	</section>

	
