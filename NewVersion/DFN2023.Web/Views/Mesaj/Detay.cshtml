
  
  <!-- blog-content -->
  <section class="hero-section about single-blog blog-content gap no-top">
  	<div class="container">
  		<div class="row">
  			<div class="offset-xl-2 col-xl-8 col-lg-12">
  				
	  			
	  			<div class="comment">
					  @if(@Model.user.Role==3){
	  				<h2>@Model.tedarikciadi Firması Mesajlarınız</h2>

					  }else{
						  
	  				<h2>@Model.tedarikciadi isimli Tüketici Mesajlarınız</h2>
					  }
	  			</div>
	  			<ul class="comment gap no-top">
					   @for (var i = 0; i < @Model.mesajdetay.Count; i++)
					  {
						  @if(@Model.mesajdetay[i].FromUser==@Model.user.Id){
					<li>
		  				<div class="comment-text">
		  					<p>@Model.mesajdetay[i].MessageContent</p>
		  				</div>
		  				<div class="author-name-comment">
		  					<div>
								<h6>Siz</h6>
			  					<span>@Model.mesajdetay[i].CreateDate</span>
								   @if(@Model.mesajdetay[i].IsShow){
									  
								  <i class="fa fa-check" style="color: limegreen;"></i>
								  }else{
									  
								  <i class="fa fa-check"></i>
								  }
		  					</div>
                                <!-- Kişinin yazışmalarında aşağıdaki görsel kalsın-->
			  					<img alt="man" src="https://via.placeholder.com/50x50">
		  				</div>
	  				</li>
						  }
						  
					   @if(@Model.mesajdetay[i].FromUser!=@Model.user.Id){
						   <li class="reply one">
		  				<div class="comment-text">

		  					<p>@Model.mesajdetay[i].MessageContent</p>		  					
		  				</div>
		  				<div class="author-name-comment">
                             <!-- Karşı taraf şirketse, onların logosunu basacağız. -->
		  					<img alt="man" src="https://via.placeholder.com/50x50">
		  					<div>
								<h6>@Model.mesajdetay[i].UserFrom</h6>
			  					<span>@Model.mesajdetay[i].CreateDate</span>
								   @if(@Model.mesajdetay[i].IsShow){
									  
								  <i class="fa fa-check" style="color: limegreen;"></i>
								  }else{
									  
								  <i class="fa fa-check"></i>
								  }
								 
		  					</div>
			  					
		  				</div>
	  				</li>
						  }
	  				
					  }
	  			
	  				
	  				<li class="hide-button">
	  					<a href="#"><h6>Hide<i class="fa-solid fa-angle-up"></i></h6></a>
	  				</li>
	  				
	  				<li class="show-all-button">
	  					<h6>4 more answers <a href="#"><span>Show All<i class="fa-solid fa-angle-down"></i></span></a></h6>
	  				</li>
	  				<li>
	  					<div class="button-gap">
							<a href="#" class="button button-2 non">See all comments<i class="fa-solid fa-angle-down"></i></a>
						</div>
					</li>
	  			</ul>
	  			<div class="comment">
	  				<h2>Mesajınızı Giriniz</h2>
	  				<form class="comment-blog">
	  					<textarea id="mesajalani" placeholder="Enter you comment"></textarea>
	  				</form>
						  <button onclick="mesajYaz(@Model.selectcompanyid)" class="button-price">Mesajı Gönder</button>
	  				
	  				
	  			</div>
  			</div>
  		</div>
  	</div>
  </section>

  <script>
    var hst = "@Url.Action("mesajYazUser", "Mesaj")";
	var user="@Model.user"
</script>
	<script src="~/assets/js/mesajdetay.js"></script>

